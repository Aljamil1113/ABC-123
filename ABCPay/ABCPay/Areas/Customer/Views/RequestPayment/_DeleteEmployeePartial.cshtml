@model ABCPay.Models.Payment

<div class="modal fade" id="deletePayment">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="deleteEmployeeLabel">Are you sure you want to delete this payment request?</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span></span>
                </button>
            </div>
            <div class="modal-body">
                <form action="Delete">
                    <div class="form-group">
                        <label asp-for="Id">@Model.Id</label>
                        <input type="hidden" asp-for="@Model.Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ReferenceNumber">@Model.ReferenceNumber</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-danger" data-save="modal">Delete</button>
             </div>
        </div>
    </div>
</div>