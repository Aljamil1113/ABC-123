@model ABCPay.Models.ViewModels.RequestPaymentViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Request Payments</h2>
    </div>
</div>

    <br />
    <br />

    <div class="row">
        <div class="col-12 text-right">
            <a asp-action="New" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp;New Request Payment</a>
            <a asp-action="" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp;Batch Request Payment</a>
        </div>
    </div>
<br />

<form method="get">
    <div>
        <table class="table table-striped" id="paymentRecords">
            <thead>
                <tr class="table-info">
                    <th>@Html.DisplayNameFor(p => p.Payments.FirstOrDefault().Date)</th>
                    <th>@Html.DisplayNameFor(p => p.Payments.FirstOrDefault().ReferenceNumber)</th>
                    <th>@Html.DisplayNameFor(p => p.Payments.FirstOrDefault().Merchant)</th>
                    <th>@Html.DisplayNameFor(p => p.Payments.FirstOrDefault().AccountNumber)</th>
                    <th>@Html.DisplayNameFor(p => p.Payments.FirstOrDefault().AccountName)</th>
                    <th>@Html.DisplayNameFor(p => p.Payments.FirstOrDefault().OtherDetails)</th>
                    <th>@Html.DisplayNameFor(p => p.Payments.FirstOrDefault().Amount)</th>
                    <th>@Html.DisplayNameFor(p => p.Payments.FirstOrDefault().Status)</th>
                    <th>@Html.DisplayNameFor(p => p.Payments.FirstOrDefault().ServiceFee)</th>
                    <th>@Html.DisplayNameFor(p => p.Payments.FirstOrDefault().PPRemarks)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Payments)
                {
                    <tr>
                        <td>@Html.DisplayFor(p => item.Date)</td>
                        <td><a class="btn btn-link" asp-action="Edit" asp-route-id="@item.Id">@Html.DisplayFor(p => item.ReferenceNumber)</a></td>
                        <td>@Html.DisplayFor(p => item.Merchant.Name)</td>
                        <td>@Html.DisplayFor(p => item.AccountNumber)</td>
                        <td>@Html.DisplayFor(p => item.AccountName)</td>
                        <td>@Html.DisplayFor(p => item.OtherDetails)</td>
                        <td>@Html.DisplayFor(p => item.Amount)</td>
                        <td>@Html.DisplayFor(p => item.Status.Name)</td>
                        <td>@Html.DisplayFor(p => item.ServiceFee)</td>
                        <td>@Html.DisplayFor(p => item.PPRemarks)</td>
                        <td>
                            @*<button type="button" class="btn btn-danger" data-toggle="ajax-modal"
                                    data-target="#deletePayment" data-url="@Url.Action($"Delete/{item.Id}")">
                                <i class="fas fa-trash-alt"></i>
                            <input type="submit" value="" class="btn btn-danger" />
                            </button>*@

                            <div>
                                <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div page-model="@Model.PagingInfo" page-action="Index" page-class-enabled="true"
         page-class="btn border" page-class-normal="btn btn-default active"
         page-class-selected="btn btn-primary active" class="btn-group m-1"></div>
</form>

