
@{
    ViewData["Title"] = "ImportForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Import Excel File</h2>

<form method="post" asp-controller="RequestPayment" asp-action="ImportExcel" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label>Select Excel file...</label>
            </div>
            <div class="col-5">
                <input type="file" name="file" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-controller="RequestPayment" asp-action="Index" class="btn btn-success">Cancel</a>
        </div>
    </div>
</form>